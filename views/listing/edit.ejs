<% layout("layouts/boilerplate") %> 

    <div class="row">
    <div class="col-8 offset-2"> 
        <h1 style="margin:10px 20% ">Edit your listing</h1>
    <form method="post" 
      action="/listing/<%=list._id%>/edit?_method=put" 
      class="edit-form needs-validation" 
      novalidate 
      enctype="multipart/form-data" > 
        <div class="mb-3">
          <label for="title" class="form label">Title</label>
          <input name="listing[title]"value="<%=list.title%>" class="form-control" required/>
          <div class="valid-feedback">Title is correct!</div>
            <div class="invalid-feedback">Title is incorrect!</div>
        </div>
        <div class="mb-3">
          <label for="Description" class="form label">Description</label>
          <textarea name="listing[description]"type="text"class="form-control" required>
            <%= list.description %>
          </textarea>
          <div class="valid-feedback">description is correct!</div>
            <div class="invalid-feedback">description is incorrect!</div>
        </div> 
         <div class="mb-3">
             <b>actual image</b>
             <p><img src="<%=originalUrl%>"></p> 
         </div>
        <div class="mb-3">
            <label for="image" class="form label">insert image</label>
            <input name="listing[image]"value="<%=list.image%>"type="file"class="form-control"/> 
            <div class="valid-feedback">Image is correct!</div>
            <div class="invalid-feedback">Image is incorrect!</div>
        </div>
        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form label">Price</label>
                <input name="listing[price]"class="form-control"value="<%=list.price%>" required/>
                <div class="valid-feedback">Price is correct!</div>
            <div class="invalid-feedback">Price is incorrect!</div>
              </div>
              <div class="mb-3 col-8"> 
                <label for="country" class="form label">Country</label> 
                <input name="listing[country]"class="form-control"value="<%=list.country%>"type="text" required/> 
                <div class="valid-feedback">Country is correct!</div>
                <div class="invalid-feedback">Country is incorrect!</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form label">Location</label>
            <input name="listing[location]"class="form-control"value="<%=list.location%>"type="text" required/> 
            <div class="valid-feedback">Location is correct!</div>
            <div class="invalid-feedback">Location is incorrect!</div> 
        </div>
         <br>
    <button class="btn btn-warning">Submmit</button> 
    </form>
    </div>
    </div>
