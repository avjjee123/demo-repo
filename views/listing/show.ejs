<% layout("layouts/boilerplate") %>
<script> 
const mapToken="<%= process.env.MAP_TOKEN %>"; 
let list=<%- JSON.stringify(list)%>;
</script>
<body>
   <div class="card list-card">
      <div class="row">
         <div class="col-8 offset-2"> 
           <h3 class="mt-3"><%=list.title%></h3>
           <img src="<%=list.image.url%>" class=" card-img list-img" alt="listing-image"> 
        <div class="card-body">
          <p class="card-text">
          Owened By <i><b><%= list.owner?.username || 'Unknown' %></b></i>
        </p>
          <%=list.description%><br>
          &#8377; <%=list.price?list.price.toLocaleString("en-IN"):"N/I"%><br>
          <%=list.location%><br>
          <%=list.country%><br>
        </div>
       </div>
       </div>
      
        <div class="show-btn mt-2"> 

           <div class="col-2 offset-4 ">
              <a href="/listing/<%=list._id%>/edit">edit listing</a>
           </div> 

          <div class="col-2 offset-1">
          <form method="post" action="/listing/<%=list._id%>/delete?_method=delete"> 
           <button class="btn btn-danger">Delete</button>
          </form>
          </div> 
         </div>
         
   </div>
     <hr> 
     <% if(currentUser) { %> 
     <form method="post" action="/listing/<%=list._id%>/review" class="needs-validation" novalidate>
        <div class="col-8 offset-3 mb-2 ">
            <div class="mt-3 ">   
               <label for="rating" class="form-label">Rating</label>
              <fieldset class="starability-slot form-input">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" /> 
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
               <div class="invalid-feedback">enter your rating</div>
            </div>
            <div class="mt-3 mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" cols="40" rows="5" class="form-input" required
                ></textarea>
                <div class="invalid-feedback">enter your comment</div> 
            </div>
            <button class="btn btn-primary">Submit</button>
        </div>
       <hr>
     </form> 
    <% } %> 
    <% if(list.reviews.length>0) { %>
     <p><b>All Reviews</b></p>
     <div class="row">
      <% for(review of list.reviews) {%>
         <div class="card col-5 ms-3 mb-3"> 
            <div class="card-body">
                <h5 class="card-title"><%=review.author.username%></h5>
                <p class="starability-result card-title" data-rating="<%=review.rating%>"></p>
                <p class="card-text"><%=review.comment%></p>                
               <form class="mb-3" method="post" action="/listing/<%=list._id%>/review/<%=review._id%>?_method=delete">
                  <button class="btn btn-dark">Delete</button>
               </form>
               
            </div>
         </div>    
      <%} %>
     </div>
      <% } %>  
      <div class="col-8 offset-3 mt-3 mb-3">
         <p><B>Where you'll be</B></p>
         <div id="map"></div>
         </div>
<script src="/js/map.js"></script>
</body>